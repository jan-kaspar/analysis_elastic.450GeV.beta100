#!/bin/bash

source environment || exit 1

# compile everything
build_directories=(
	"."
)

for d in ${build_directories[*]}
do
	echo "-------------------- BUILDING $d --------------------"
	make -C "$d" || exit 3
done

# run basic analysis
ds="fill7291/Totem1"
./run -no-bckg "distill.cc" "data/$ds"

