#!/bin/bash

(
	echo "["

	first="True"

	for src in `find . -name "*.cc" | grep -v OLD`
	do
		if [ "$first" == "False" ]
		then
			echo "    ,"
		fi

		first="False"

		src="${src#*/}"

		extra=""
		t=`echo $src|grep classes`
		if [ -n "$t" ]
		then
			extra="-c"
		fi

		echo "    {"
		echo "         \"command\": \"clang++ $extra $GCC_OPT_CLANG $INCS $src\","
		echo "         \"directory\": \"$BASE_DIR\","
		echo "         \"file\": \"$BASE_DIR/$src\""
		echo "    }"
	done

	echo "]"
) > "compile_commands.json"
